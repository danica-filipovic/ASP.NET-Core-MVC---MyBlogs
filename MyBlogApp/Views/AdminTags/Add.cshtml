@model MyBlogApp.Models.View_Models.AddTagRequest // Model - View -> Binding

@{
}

<!-- This div has a Bootstrap class with three CSS properties-->
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<!--  This is a created form to capture users details-->
<div class="container py-5">
    <form method="post">

        <!-- Using Bootstrap to create these two form elements-->
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName"/>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>