@model MyBlogApp.Models.View_Models.EditTagRequest //  Model - View -> Binding
@{
}

<!-- This div has a Bootstrap class with three CSS properties-->
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">

    @if (Model != null)
    { // Checking if we found a Tag model before we render the page

    <form method = "post">
        <class class ="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly />
        </class>

        <class class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" id="name" class="form-control" asp-for="Name" />
        </class>

        <class class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" id="displayName" class="form-control" asp-for="DisplayName"/>
        </class>

       <div class="mb-5">
            <div class="d-flex mt-4">
                <button type="submit" class="btn btn-dark">Update</button>

                <button class="btn btn-danger ms-2" type="submit"  asp-area="" asp-controller="AdminTags"asp-action="Delete"> Delete </button>
           </div>
        </div>

    </form>
    }

    else 
    {
        <p>Tag not found</p>
    }
 </div>